<!DOCTYPE html>
<html>

<head>
  <% include ../partials/head.ejs %>
</head>

<body>
  <% include ../partials/navbar.ejs %>

    <main class="container">
      <h1>Edit Advertisement</h1>
      <form action="/adverts/<%= advert.id %>/update" method="post">
        <div class="form-group">
          <label for="title">Advert Title</label>
          <input value="<%= advert.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea rows="4" class="form-control" name="description" placeholder="Enter Description"><%= advert.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../partials/baseScripts.ejs %>

</body>

</html>
